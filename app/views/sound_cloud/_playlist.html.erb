 <div class="row">
  <div class="col-xs-2 left">
    <img src="<%=playlist.thumbnail_link%>" class="thumb" height="70" width="70">
   </div>
   <div class="col-xs-10 left"> 
    <address>
      Playlist: <strong><%= link_to playlist.title, sc_playlist_path(playlist.id)%></strong> <br/>
      User: <strong> <%= link_to playlist.user.username, sc_user_path(playlist.user.id)%> </strong> <br/>
      <%= link_to "Open in SoundCloud", playlist.permalink_url, target: "_blank"%>
    </address>
  </div>
</div>